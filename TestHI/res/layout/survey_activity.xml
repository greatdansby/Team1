<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:background="@drawable/box" >

        <LinearLayout
            android:id="@+id/allSurveys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/TextView07"
                    android:layout_width="400dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:text="Connect to 3rd party applications such as FitBit &amp; 23andMe to see new statistics on your health."
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:onClick="setSurvey"
                    android:background="@drawable/roundedcorners"
                    android:gravity="center"
                    android:text="Take Survey"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="400dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Connect to 3rd party applications such as FitBit &amp; 23andMe to see new statistics on your health."
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundedcorners"
                    android:gravity="center"
                    android:text="3rd Party Apps"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="400dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Connect to 3rd party applications such as FitBit &amp; 23andMe to see new statistics on your health."
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundedcorners"
                    android:gravity="center"
                    android:text="3rd Party Apps"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_weight="0" 
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView14"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Connect to 3rd party applications such as FitBit &amp; 23andMe to see new statistics on your health."
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>